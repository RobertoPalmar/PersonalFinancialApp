<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinancialApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#0063F5</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- STATUS BAR AND BACKGROUND -->
        <item name="android:statusBarColor">#FF1C1C1C</item>
        <item name="android:windowBackground">#F8F9FA</item>
    </style>

    <style name="ThemeOverlay.CustomDatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:textColorPrimary">@color/white</item>

        <item name="buttonBarPositiveButtonStyle">@style/CustomDatePickerButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDatePickerButton</item>
    </style>

    <style name="CustomDatePickerButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>